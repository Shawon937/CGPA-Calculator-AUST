<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#59b0d9"
    tools:context="com.example.siam_ansary.austgpacalculator00.DeleteRecords">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="534dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#dfea94"
                android:layout_height="267dp"
                android:gravity="top"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete a single record:"
                    android:textSize="30dp"
                    android:background="#ab9d59"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Enter record no.:"
                        android:textSize="30dp"
                        />
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/delRecEntry"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="26dp"
                        android:background="#eac5c5"
                        android:onClick="DelSinRec"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not01"
                        android:textSize="20dp"
                        android:layout_marginTop="30dp"/>
                </LinearLayout>








            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:background="#f53a60"
                android:layout_height="267dp"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete all records:"
                    android:textSize="30dp"
                    android:background="#ab9d59"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="26dp"
                        android:background="#eac5c5"
                        android:onClick="DelAllRec"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not02"
                        android:textSize="20dp"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
